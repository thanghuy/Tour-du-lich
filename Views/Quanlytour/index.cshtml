@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Quản lý tour";
    int i = 1;
}
@model IEnumerable<tour.ViewModels.ChiTietTourVM>
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Danh sách tour</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Danh sách tour</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="btn-group btn-add" role="group" aria-label="Basic example">
                                <a href="/Quanlytour/Create" class="btn btn-primary">Thêm tour mới</a>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table class="table table-bordered table-hover" id="tableXemGiaTour">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">STT</th>
                                        <th scope="col">Mã Tour</th>
                                        <th scope="col">Tên Tour</th>
                                        <th scope="col">Mô tả</th>
                                        <th scope="col">Loại hình</th>
                                        <th scope="col">Danh sách các điểm đến</th>
                                        <th scope="col">Xem giá</th>
                                        <th scope="col">Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var c in Model)
                                    {
                                        <tr>
                                            <th scope="row">@i</th>
                                            <td>@("T" + @c.TourId)</td>
                                            <td>@c.TenTour</td>
                                            <td>@c.Mota</td>
                                            <td>@c.TenLoai</td>
                                            <td>
                                                @foreach (var ds in c.DanhSachDiaDiem)
                                                { 
                                                    @ds<br>
                                                }
                                        </td>
                                        <td>Xem giá</td>
                                        <td>
                                            <a href="#" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a>
                                            <a class="btn btn-primary btn-sm" href="#">
                                                <i class="fas fa-pencil-alt">
                                                </i>
                                                Sửa
                                            </a>
                                            <a class="btn btn-danger btn-sm" href="#">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    i = i + 1;
                                }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    </section>
</div>