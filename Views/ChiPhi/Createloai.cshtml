@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Thêm loại chi phí";
}
@model LoaiChiPhis;
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thêm loại chi phí</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Thêm giá mới</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="container-fluid card">
            <div class="col-12">
                <form method="post">
                    <div class="row">
                        <div class="col-12" style="padding: 20px;">
                            <div class="form-group">
                                <label>Tên Chi phí</label>
                                <input type="text" class="form-control" asp-for="Ten">
                                <span class="text-danger" asp-validation-for="Ten"></span>

                            </div>
                            <div class="form-group">
                                <label>Mô tả</label>
                                <input type="text" class="form-control" asp-for="Mota">
                                <span class="text-danger" asp-validation-for="Mota"></span>
                            </div>
                        </div>
                        <div class="modal-footer col-12">
                            <button type="submit" class="btn btn-primary">Lưu</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>