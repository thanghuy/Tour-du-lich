@model Doans
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Sửa đoàn du lịch";
    var tour = ViewBag.tour;
}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thêm 1 đoàn mới</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Sửa đoàn khách</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="container-fluid card">
            <div class="col-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="DoanId" />
                    <div class="row">
                        <div class="col-12" style="padding: 20px;">
                            <div class="form-group">
                                <label>Tên đoàn</label>
                                <input type="text" asp-for="Ten" class="form-control" placeholder="Nhập tên đoàn">
                                <span class="text-danger" asp-validation-for="Ten"></span>
                            </div>
                        </div>
                        <div class="col-12" style="padding: 20px;margin-bottom: 10px;">
                            <div class="row">
                                <div class="col">
                                    <label>Ngày đi</label>
                                    <input type="date" asp-for="NgayDi" class="form-control">
                                    <span class="text-danger" asp-validation-for="NgayDi"></span>
                                </div>
                                <div class="col">
                                    <label>Ngày về</label>
                                    <input type="date" asp-for="NgayVe" class="form-control">
                                    <span class="text-danger" asp-validation-for="NgayVe"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Chọn tour</label>
                                <select asp-for="TourId" class="form-control" id="select-tour-price">
                                    <option selected='true'>Chọn tour cần đi</option>
                                    @foreach (var item in tour)
                                    {
                                        <option value="@item.TourId">@item.Ten</option>
                                    }

                                </select>
                                <span class="text-danger" asp-validation-for="TourId"></span>
                            </div>
                            <div class="form-group">
                                <label>Giá</label>
                                <input type="number" class="form-control" id="price-tour-d" readonly>
                            </div>
                            <div class="row" style="margin-top: 10px;">
                                <div class="col">
                                    <label>Chi tiết chương trình</label>
                                    <textarea asp-for="ChiTietChuongTrinh" class="form-control detail-ct-tour" style="height: 500px;"></textarea>
                                </div>
                            </div>
                            <div class="col">
                                <span class="text-danger" asp-validation-for="ChiTietChuongTrinh"></span>
                            </div>
                        </div>
                        <div class="col-12" style="padding: 20px;">
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary" id="btn_save_tour">Lưu</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

